<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Sphere" Height="650" Width="1125">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" /> <!-- Область для Viewport3D -->
            <ColumnDefinition Width="150" /> <!-- Область для кнопок -->
        </Grid.ColumnDefinitions>

        <!-- Viewport для отображения 3D-сцены -->
        <Viewport3D x:Name="MainViewport" Grid.Column="0">
            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="MainCamera"
                                   Position="20, 40, 170"
                                   LookDirection="0, 0, -1"
                                   UpDirection="0, 30, 0"
                                   FieldOfView="70" />
            </Viewport3D.Camera>

            <!-- Источник света для сцены -->
            <ModelVisual3D x:Name="vis3DLighting">
                <ModelVisual3D.Content>
                    <DirectionalLight x:Name="dirLightMain" Direction="0, 0, 0"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>

        <!-- Панель с кнопками для управления сценой -->
        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="5">
            <TextBlock Text="Ширина поля:" Margin="0,10,0,0"/>
            <TextBox x:Name="WidthTextBox" Width="100" Margin="0,5,0,10"/>
            <TextBlock Text="Высота поля:" Margin="0,10,0,0"/>
            <TextBox x:Name="HeightTextBox" Width="100" Margin="0,5,0,10"/>
            <TextBlock Text="Количество подсолнухов:" Margin="0,10,0,0"/>
            <TextBox x:Name="CountSunflowersBox" Width="100" Margin="0,5,0,10"/>
            <Button Content="Загрузить сцену" Click="SetSceneSizeButton_Click" Width="105" Margin="0,10,0,0"/>
            <TextBlock Text="Амплитуда наклона:" Margin="0,10,0,0"/>
            <TextBox x:Name="AmplitudeWindTextBox" Width="100" Margin="0,5,0,10"/>
            <TextBlock Text="Частота наклона:" Margin="0,10,0,0"/>
            <TextBox x:Name="FrequencyWindTextBox" Width="100" Margin="0,5,0,10"/>
            <Button Content="Запустить ветер" Click="StartWindButton_Click" Width="105" Margin="0,10,0,0"/>
            <Button Content="Остановить ветер" Click="StopWindButton_Click" Width="105" Margin="0,10,0,0"/>
            
            <!-- <Button Content="Запустить солнце" Click="StartSunButton_Click" Width="105" Margin="0,10,0,0"/> -->
            <!-- <Button Content="Остановить солнце" Click="StopSunButton_Click" Width="105" Margin="0,10,0,0"/> -->
            
            <!-- Добавление выбора времени суток -->
            <TextBlock Text="Время суток:" Margin="0,10,0,0"/>
            <ComboBox x:Name="TimeOfDayComboBox" Width="100" Margin="0,5,0,10">
                <ComboBoxItem Content="Утро"/>
                <ComboBoxItem Content="День"/>
                <ComboBoxItem Content="Вечер"/>
                <ComboBoxItem Content="Ночь"/>
            </ComboBox>
            <Button Content="Применить время" Click="ApplyTimeOfDayButton_Click" Width="105" Margin="0,10,0,0"/>
            
            <TextBlock Text="Скорость течения времени:" Margin="0,10,0,0"/>
            <TextBox x:Name="TimeGoingBox" Width="100" Margin="0,5,0,10"/>
            <Button Content="Установить" Click="SetTimeGoingButton_Click" Width="105" Margin="0,10,0,0"/>
            
            <!-- <Button Content="Тестирование кол-ва" Click="TestSunflowerFieldLoading" Width="105" Margin="0,10,0,0"/> -->
            <!-- <Button Content="Тестирование ветра" Click="TestWindPerformance" Width="105" Margin="0,10,0,0"/> -->
            <!-- <Button Content="Тестирование поля" Click="TestSunflowerFieldLoadingWithVariableSceneSize" Width="105" Margin="0,10,0,0"/> -->

        </StackPanel>
    </Grid>
</Window>
